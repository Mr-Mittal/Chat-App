<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

    <TextView
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/Msg_User"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true" />
    <TextView
        android:layout_alignParentBottom="@+id/Msg_User"
        android:layout_alignParentEnd="true"
        android:id="@+id/Msg_Tym"
        android:textStyle="normal|bold"
        android:layout_below="@id/Msg_User"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentRight="true" />
    <ImageView
        android:id="@+id/Msg_Image"
        android:textSize="20sp"
        android:inputType="textMultiLine"
        android:textStyle="normal"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/Msg_Text"
        android:layout_toEndOf="@+id/Msg_Text" />

        <TextView
            android:id="@+id/Msg_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="69dp" />

          </RelativeLayout>



</RelativeLayout>